<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Login</title>

    <!-- CSS Link -->
    <link rel="stylesheet" href="/css/style.css">

    <!-- Bootstrap Link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

</head>

<body>

    <!-- Login -->
    <section id="login" class="my-5">
        <div class="container">
            <div class="row">
                <!-- Column-1 -->
                <div class="col-lg-6">
                    <img class="w-100" src="https://plus.unsplash.com/premium_photo-1691844988214-a1ec03082354?w=400&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mjl8fGNvbGxlZ2UlMjBzdHVkZW50fGVufDB8fDB8fHww" alt="College Students Image-1"
                        height="100%">
                </div>
                <!-- End Column-1 -->

                <!-- Column-2 -->
                <div class="col-lg-6 bglogin p-4">
                    <form action="/verifyLogin" method="post">
                        <!-- logo -->
                        <!-- <center>
                            <img class="mb-4 rounded-circle" src="./Images/logo.jpeg" alt="logo" width="20%" height="20%">
                        </center> -->

                        <!-- Heading (Login) -->
                        <h1 class="mb-5 text-center" style="color: red;">Login</h1>

                        <% if(message.length > 0){ %>
                            <div class="alert-success">
                                <%= message %>
                            </div>
                      <% } %>


                      <% if(msg.length > 0){ %>
                        <div class="alert-danger">
                            <%= msg %>
                        </div>
                  <% } %>

                        <!-- Email -->
                        <div class="row mb-3">
                            <div class="col-lg-2 text-center rounded text-light fw-light my-auto p-2" style="background-color: rgba(98, 153, 35, 0.912); ">Email</div>
                            <div class="col-lg-10">
                                <input name="email" class="form-control" type="email" placeholder="name@example.com" required autocomplete="email">

                            </div>
                        </div>

                        <!-- Password -->
                        <div class="row mb-5">
                            <div class="col-lg-2 text-center rounded text-light fw-light my-auto p-2" style="background-color: rgba(98, 153, 35, 0.912)">Password</div>
                            <div class="col-lg-10">
                                <input name="password" class="form-control" type="password" placeholder="password" required autocomplete="current-password">

                            </div>
                        </div>

                        <!-- Button (Login) -->
                        <center>
                            <button type="submit" class="btn btn-primary mb-5 btn-lg">Login</button>
                        </center>
                        
                        <!-- Register Now -->
                        <center>
                            <p class="text-uppercase fw-light">Don't have an account? &nbsp;<a href="/register">Register Now</a></p>
                        
                            <!-- Forget password -->
                            <a href="#" data-bs-toggle="modal" data-bs-target="#Forgot">Forgot Password</a>
                        </center>                       
                        
                    </form>
                </div>
                <!-- End Column-2 -->
            </div>
        </div>
    </section>
    <!-- End Login -->

     <!--Forgot Password -->
     <div class="modal fade" id="Forgot" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Forget Password</h1>

                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <form action="/forgot_Password" method="post">


                        <div class="mb-3">
                            <label for="">Email</label>
                            <input type="text" name="email" class="form-control">
                        </div>

                        <button type="submit" class="btn btn-success">Submit</button>

                    </form>
                </div>

            </div>
        </div>
    </div>
    <!--End Btech Modal -->

    <!-- Java Script Link -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>